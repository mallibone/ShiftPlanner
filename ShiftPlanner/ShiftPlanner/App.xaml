<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ShiftPlanner.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#3F51B5</Color>
            <Color x:Key="PrimaryColorDark">#303F9F</Color>
            <Color x:Key="PrimaryColorLight">#C5CAE9</Color>
            <Color x:Key="AccentColor">#607D8B</Color>
            <Color x:Key="PrimaryTextColor">#212121</Color>
            <Color x:Key="SecondaryTextColor">#757575</Color>

            <OnPlatform x:TypeArguments="Thickness" Android="10" iOS="16" WinPhone="16" x:Key="DefaultMargin" />

            <Style TargetType="Label" x:Key="TitleLabel">
                <Setter Property="FontSize" Value="32" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
            </Style>
        </ResourceDictionary>
        <!-- Application resource dictionary -->
    </Application.Resources>
</Application>